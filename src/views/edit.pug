include ./mixin
console.log(id)

doctype html
html
  head
    title Basic Form
  body
    h1 Edit for 
        span= user.name

    form(action='/'+user.name, method='POST')
      +textInput('name', 'Name: ', user.name)
      div
        label(for='email') Email:
        input(type='email', name='email', id='email', value=user.email)
      +textInput('age', 'Age: ', user.age)
      div
        input(type='submit', value='Edit')
      