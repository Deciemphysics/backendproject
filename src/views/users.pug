include ./mixin

doctype html
html
  head
    title User List
  body
    h1 Finish this page
      ul 
        for user in users
          li= user.name
          a(href="/" + user.name) Edit
          form(action='/del'+user.name, method="POST")
              input(type='submit', value='Delete')
      div
        a(href="/add") Add User